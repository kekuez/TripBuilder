{% extends 'base.html.twig' %}
{% block body %}
    <h2 class="page-header">Trip List</h2>
    <table class="table table-striped">
        <thead>
            <tr> <th>#</th> <th>Trip Name</th> <th>Depart From</th> <th>Destination</th><th>Publish Date</th><th></th></tr>
        </thead>
        <tbody>
            {% for trip in trips %}
            <tr>
                <th scope="row">{{ trip.id }}</th>
                <td>{{ trip.tripName }}</td>
                <td>{{ trip.departFrom }}</td>
                <td>{{ trip.destination }}</td>
                <td>{{ trip.createDate|date('F j, Y, g:i:a') }}</td>
                <td>
                    <a href="/trip/details/{{ trip.id }}" class="btn btn-success">View</a>
                    <a href="/trip/edit/{{ trip.id }}" class="btn btn-default">Edit</a>
                    <a href="/trip/delete/{{ trip.id }}" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
